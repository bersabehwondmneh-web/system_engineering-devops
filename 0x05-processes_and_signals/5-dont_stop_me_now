#!/usr/bin/env bash
# This script finds and terminates the "4-to_infinity_and_beyond" script if it is running
# Find the Process ID(s) of the script by looking for its name
PIDS=$(pgrep -f "4-to_infinity_and_beyond")
# Check if any PIDs were found
if [ -n "$PIDS" ]; then
    # Terminate each process found
    kill $PIDS
    echo "Stopped the '4-to_infinity_and_beyond' process(es)."
else
    echo "No running '4-to_infinity_and_beyond' process found."
fi
